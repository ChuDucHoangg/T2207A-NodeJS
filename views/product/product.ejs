<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

</head>
<body>
    <section>
        <div class="container">
            <h1 class="form-inner__heading pt-2 pb-2">List Products | <a href="/"> Home</a></h1>
            <table class="table">
                <thead>
                  <tr>
                    <!-- <th scope="col">#</th> -->
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Category</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% products.forEach(e=>{  %>
                    <tr>
                        <td><%= e.name %></td>
                        <td><%= e.price %></td>
                        <td><%= e.description %></td>
                        <td><%= e.category.name %></td>
                        <td><%= e.brand.name %></td>
                        <td><img src="data:<%= e.image.contentType %>;base64,<%= e.image.data %>" width="100px"/></td>
                        <td>
                          <a href="/auth/editproduct/<%= e._id %>" class="btn btn-primary">Edit</a>
                          <a onclick="return confirm('Xác nhận xoá sản phẩm <%= e.name %>')" href="/auth/deleteproduct/<%= e._id %>"  class="btn btn-warning">Delete</a>
                        </td>
                    </tr>        
                <% }) %>
                </tbody>
              </table>
              <div class="button">
                <a href="/auth/addproduct" class="btn btn-primary">Add Product</a>
              </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>